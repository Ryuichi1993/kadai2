<% if flash[:notice] %>
<div class="flash">
	<%= flash[:notice] %>
</div>
<% end %>


<h1>Books</h1>

<table>

	<thead>
	<tr>
		<th>Title</th>
		<th>Body</th>
		<th colspan="3"></th>
	</tr>
	</thead>
	<% @books.each do |book| %>
	<tbody>
	<tr>

		<td><%= book.title %></td>
		<td><%= book.body %></td>
		<td><%= link_to'show' , book_path(book.id) %></td>
		<td><%= link_to 'Edit' , edit_book_path(book.id) %></td>
		<td><%= link_to 'Destroy', book_path(book), method: :delete, data:{ confirm: 'Are you sure?'} %></td>
	</tr>
</tbody>
<% end %>
</table>




<div class="new book">
	<h2>New Book</h2>
<%= form_for(@book) do |f| %>
	<% if @book.errors.any? %>
	<div class="alert-alert-warinig">
		<p class="error-count"><%= @book.errors.full_messages.count %>errors prohibited this book from being saved:</p>
		<ul>
			<% @book.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	</div>

<% end %>

		<div class="Title1">
			<h4>Title</h4>
				<%= f.text_field :title %>
		</div>

		<div class="Body2">
			 <h4>Body</h4>
				<%= f.text_area :body %>
		</div>

		<div class="cb"><%= f.submit 'Create Book' %>
		</div>
	</div>

<% end %>
